{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["../frontend/src/*"],
    }
  },
  "include": [
    "./**/*.ts",
    "../frontend/src/types/app-iframe-message/**/*.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
