{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    // scratch has some JS files for which this setting causes errors
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "preserveSymlinks": true,
    // scratch provides only partial types
    "noImplicitAny": false,
    "paths": {
      // alias
      "@scratch-submodule/*": [
        "./src/scratch-editor/*",
        "./types/scratch-editor/*"
      ]
    },
    "incremental": true
  },
  "include": ["src", "types/**/*.d.ts", "__tests__"],
  "exclude": ["node_modules"]
}
