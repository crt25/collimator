{
  "name": "collimator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:coverage": "BABEL_ENV=coverage next dev",
    "build": "next build",
    "build:coverage": "BABEL_ENV=coverage next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "update:api": "shx rm -rf src/api/collimator/generated && orval",
    "i18n:extract": "formatjs extract 'src/{pages,components,sections}/**/*.{js,ts,tsx}' --format crowdin --out-file content/locales/en.json",
    "i18n:compile": "formatjs compile-folder --ast --format crowdin content/locales content/compiled-locales",
    "i18n:fill": "node ./scripts/fill-locales.mjs",
    "i18n:update": "yarn i18n:extract && yarn i18n:fill && yarn i18n:compile",
    "test": "yarn test:jest && yarn test:playwright",
    "test:cov": "yarn test:jest:cov && yarn test:playwright",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:cov": "jest --coverage",
    "test:jest:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:pre": "shx rm -rf coverage-ct/ .nyc_output/",
    "test:ct": "yarn test:pre && playwright test -c playwright-ct.config.ts && nyc report --report-dir coverage-ct",
    "test:playwright": "yarn test:ct",
    "test:storybook": "test-storybook --coverage --coverageDirectory coverage-storybook",
    "storybook": "storybook dev -p 6006",
    "storybook:await": "bash -c \"until curl --output /dev/null --silent --head --fail http://localhost:6006; do printf '.'; sleep 3; done\"",
    "storybook:build": "storybook build",
    "next:upgrade": "npx @next/codemod@canary upgrade latest"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@hookform/resolvers": "^3.9.1",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.6",
    "chartjs-plugin-annotation": "^3.1.0",
    "jqgram": "^0.2.5",
    "next": "14.2.12",
    "openid-client": "^6.1.3",
    "patternomaly": "^1.3.2",
    "playwright-test-coverage": "^1.2.12",
    "primereact": "^10.8.4",
    "react": "^18",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^18",
    "react-hook-form": "^7.53.1",
    "react-hot-toast": "^2.4.1",
    "react-intl": "^6.8.6",
    "shx": "^0.3.4",
    "socket.io-client": "^4.8.1",
    "swr": "^2.2.5",
    "ts-pattern": "^5.5.0",
    "unique-names-generator": "^4.7.1",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.3",
    "@faker-js/faker": "^9.3.0",
    "@formatjs/cli": "^6.3.15",
    "@playwright/experimental-ct-react": "^1.49.1",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/nextjs": "^8.4.7",
    "@storybook/preview-api": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/test-runner": "^0.21.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@types/bootstrap": "^5",
    "@types/jest": "^29.5.13",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "babel-plugin-formatjs": "^10.5.30",
    "babel-plugin-istanbul": "^7.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-storybook": "^0.11.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.7.0",
    "nyc": "^17.1.0",
    "orval": "^7.4.1",
    "prettier": "^3.4.2",
    "sass": "^1.83.1",
    "storybook": "^8.4.7",
    "storybook-addon-mock": "^5.0.0",
    "storybook-react-intl": "^3.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vite-plugin-istanbul": "^6.0.2",
    "wait-for-expect": "^3.0.2"
  },
  "packageManager": "yarn@4.5.0",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
