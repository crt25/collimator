{
  "name": "collimator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:coverage": "BABEL_ENV=coverage next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "extract:i18n": "formatjs extract 'src/{pages,components,sections}/**/*.{js,ts,tsx}' --format crowdin --out-file content/locales/en.json",
    "compile:i18n": "formatjs compile-folder --ast --format crowdin content/locales content/compiled-locales",
    "i18n": "yarn extract:i18n && yarn compile:i18n",
    "test": "yarn test:jest && yarn test:playwright",
    "test:cov": "yarn test:jest:cov && yarn test:playwright",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:cov": "jest --coverage",
    "test:jest:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:pre": "shx rm -rf coverage/ .nyc_output/",
    "test:pw": "yarn test:pre && COVERAGE=true playwright test && nyc report --report-dir coverage-pw",
    "test:pw:local": "yarn test:pre && COVERAGE=true SERVER_ALREADY_RUNS=true playwright test && yarn test:post",
    "test:pw:debug": "COVERAGE=true SERVER_ALREADY_RUNS=true playwright test --debug --project='iPad Mini landscape'",
    "test:ct": "yarn test:pre && playwright test -c playwright-ct.config.ts && nyc report --report-dir coverage-ct",
    "test:playwright": "yarn test:pw && yarn test:ct"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "bootstrap": "^5.3.3",
    "next": "14.2.12",
    "playwright-test-coverage": "^1.2.12",
    "react": "^18",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^18",
    "react-intl": "^6.6.8",
    "shx": "^0.3.4",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.3.5",
    "@playwright/experimental-ct-react": "^1.48.2",
    "@playwright/test": "^1.48.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/bootstrap": "^5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "babel-plugin-formatjs": "^10.5.22",
    "babel-plugin-istanbul": "^7.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "sass": "^1.80.4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vite-plugin-istanbul": "^6.0.2",
    "wait-for-expect": "^3.0.2"
  },
  "packageManager": "yarn@4.5.0"
}
