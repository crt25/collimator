{
  "name": "collimator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "extract:i18n": "formatjs extract 'src/{pages,components,sections}/**/*.{js,ts,tsx}' --format crowdin --out-file content/locales/en.json",
    "compile:i18n": "formatjs compile-folder --ast --format crowdin content/locales content/compiled-locales",
    "i18n": "yarn extract:i18n && yarn compile:i18n"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "bootstrap": "^5.3.3",
    "next": "14.2.12",
    "react": "^18",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^18",
    "react-intl": "^6.6.8",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.2.12",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/bootstrap": "^5",
    "@types/jest": "^29.5.13",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "babel-plugin-formatjs": "^10.5.16",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "sass": "^1.79.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.5.0"
}
